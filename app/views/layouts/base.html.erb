<%# The "base" layout contains boilerplate common to *all* views. %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Shadowfax Demo <%= Rails.application.config.version %> (<%= l(Rails.application.config.version_time) %>) -->

    <%# CSS should go closest to the top of the document as possible. %>
    <%= stylesheet_link_tag(
      "application_desktop",
      media: "all",
      "data-turbolinks-track" => true
    ) %>

    <%# JavaScript must be in head for Turbolinks to work. %>
    <%= javascript_include_async_tag(
      "application_desktop",
      "data-turbolinks-track" => true
    ) %>

    <%= yield(:head) %>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%# Specifies the default name of home screen bookmark in iOS 6+ %>
    <meta name="apple-mobile-web-app-title" content="Shadowfax Demo">

    <%= csrf_meta_tags %>

    <title>
      <%= strip_tags(yield(:title)) + " â€“ " if content_for?(:title) %>
      Shadowfax Demo
    </title>
  </head>
  <body id="<%= "%s_%s" % [controller_name, action_name] %>" class="<%= yield :body_class if content_for? :body_class %>">

    <%= yield %>

  </body>
</html>
