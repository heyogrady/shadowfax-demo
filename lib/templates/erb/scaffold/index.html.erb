<%% provide(:title, "Listing <%= plural_table_name %>") %>

<div class="ui masthead vertical segment">
  <div class="ui container">
    <div class="introduction">
      <h1 class="ui header">
        <%= plural_table_name %>
      </h1>
      <div class="ui hidden divider"></div>
      <%%= link_to(new_<%= singular_table_name %>_path, class: "ui button") do %>
        <i class="plus icon"></i> New <%= human_name %>
      <%% end %>
    </div><!-- /.introduction -->
  </div><!-- /.ui container -->
</div><!-- /.ui masthead vertical tab segment -->

<div class="main ui container full-width-container">
  <table class="ui very basic table">
    <thead>
      <tr>
        <th class="collapsing">
          <div class="ui fitted checkbox" data-ui-behavior="select-all-checkbox-popover" data-html="Select all <a href='#'>150 contacts</a> in the search." data-variation="inverted">
            <input type="checkbox">
            <label></label>
          </div>
        </th>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
        <th><%= attribute.human_name %></th>
<% end -%>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
        <tr>
          <td>
            <div class="ui fitted checkbox">
              <input type="checkbox">
              <label></label>
            </div>
          </td>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
          <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
          <td>
            <div class="ui small icon buttons">
              <%%= link_to(<%= singular_table_name %>, class: "ui button") do %>
                <i class="unhide icon"></i>
              <%% end %>
              <%%= link_to(edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: "ui button") do %>
                <i class="edit icon"></i>
              <%% end %>
              <%%= link_to(<%= singular_table_name %>, class: "negative ui button", method: :delete, data: { confirm: "Are you sure you want to delete this <%= singular_table_name %>?" }) do %>
                <i class="trash icon"></i>
              <%% end %>
            </div>
        </tr>
      <%% end %>
    </tbody>
  </table>
</div><!-- /.main ui container full-width-container -->
