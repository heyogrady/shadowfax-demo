{
  "name": "shadowfax-demo",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate && bundle exec rake setup_sample_data"
  },
  "env": {
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "AWS_S3_BUCKET_NAME": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "LOG_LEVEL": {
      "value": "DEBUG"
    },
    "MAILER_USERNAME": {
      "required": true
    },
    "MAILER_PASSWORD": {
      "required": true
    },
    "MAILGUN_API_KEY": {
      "required": true
    },
    "MAILGUN_PUBLIC_API_KEY": {
      "required": true
    },
    "MAX_THREADS": {
      "value": "2"
    },
    "NEW_RELIC_LICENSE_KEY": {
      "required":true
    },
    "SECRET_KEY_BASE":{
      "required":true
    },
    "RACK_ENV": {
      "value": "staging"
    },
    "RAILS_ENV": {
      "value": "staging"
    },
    "ROLLBAR_ACCESS_TOKEN": {
      "required": true
    },
    "SEGMENTIO_WRITE_KEY": {
      "required": true
    },
    "STRIPE_PUBLISHABLE_KEY": {
      "required": true
    },
    "STRIPE_SECRET_KEY": {
      "required": true
    },
    "WEB_CONCURRENCY": {
      "value": "1"
    }
  },
  "formation": { },
  "addons": [
    "heroku-postgresql",
    "memcachedcloud",
    "papertrail"
  ],
  "buildpacks": [ ]
}
